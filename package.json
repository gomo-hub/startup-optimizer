{
  "name": "@gomo-hub/startup-optimizer",
  "version": "1.0.6",
  "description": "Progressive Module Architecture (PMA) for NestJS - Optimize startup time with tiered module loading",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && mkdir -p dist/infrastructure/auto-install && cp -r src/infrastructure/auto-install/migrations dist/infrastructure/auto-install/",
    "dev": "tsc --watch",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "postbuild": "bash ../../scripts/auto-publish.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gomo-hub/startup-optimizer.git"
  },
  "keywords": [
    "nestjs",
    "startup",
    "optimization",
    "lazy-loading",
    "progressive",
    "modules",
    "performance"
  ],
  "author": "GOMO Hub",
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "@nestjs/config": "^3.0.0 || ^4.0.0",
    "@nestjs/typeorm": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.0.0",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.3.0",
    "typeorm": "^0.3.0"
  },
  "dependencies": {
    "typeorm": "^0.3.19"
  },
  "publishConfig": {
    "registry": "https://us-central1-npm.pkg.dev/macoolgo/gomo-hub/"
  },
  "files": [
    "dist"
  ]
